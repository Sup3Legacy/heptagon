(* The time module *)

(* The time is given in milliseconds *)
type time = long

external val fun add_time(time;int) returns (time)

(* Get current system time in milliseconds *)
external val fun get_time() returns (time)

(* Blocking wait, returns false when interrupted or given time is less than current time. *)
external unsafe val fun sleep_until(time) returns (bool)

(* Return the starting date of the program. Will return the same for any instance. *)
external val node start_time() returns (time)
