
node lent<<n :int>>() returns (y :int)
let
  y = 1 fby (Do.stuff(n*20) + y + 1); (*counts 1, 2 ,3 ...*)
tel


node rapide<<n :int>>() returns (z,cpt :int)
var big_step :bool; r :int;
let
  big_step = true fby (cpt = 0); (*lent's clock*)
  reset
    cpt = n fby cpt - 1; (*timer*)
  every big_step;
  z = merge big_step
            (true -> r)
            (false -> Do.stuff(20));
  r = 0 fby lent<<n>>();
tel


node main() returns(r,c: int)
let
  (r,c) = rapide<<5>>();
tel
